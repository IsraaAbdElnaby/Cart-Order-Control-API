<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <extension_attributes for="Voo\CartOrderControl\Api\Data\CartDetailsInterface">
        <attribute code="is_virtual" type="boolean" />
        <attribute code="items_count" type="integer" />
        <attribute code="shipping_method_code" type="string" />
    </extension_attributes>

    <extension_attributes for="Voo\CartOrderControl\Api\Data\CartItemInterface">
        <attribute code="image_url" type="string" />
        <attribute code="is_in_stock" type="boolean" />
        <attribute code="qty_available" type="float" />
        <attribute code="product_type" type="string" />
        <attribute code="configurable_options" type="mixed" />
        <attribute code="custom_options" type="mixed" />
    </extension_attributes>
</config>
