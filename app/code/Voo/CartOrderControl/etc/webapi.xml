<?xml version="1.0"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/voo-api/cart" method="GET">
        <service class="Voo\CartOrderControl\Api\CartInterface" method="getCartDetails"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>

    <route url="/V1/voo-api/cart" method="POST">
        <service class="Voo\CartOrderControl\Api\CartManagementInterface" method="addOrUpdateItem"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>

    <route url="/V1/order" method="POST">
        <service class="Voo\CartOrderControl\Api\OrderInterface" method="submitOrder"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>
</routes>
